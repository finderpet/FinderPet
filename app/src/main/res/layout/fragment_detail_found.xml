<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DetailFoundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDetail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sin_imagen" />

        <ImageView
            android:id="@+id/imgDetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sin_imagen" />

        <ImageView
            android:id="@+id/imgDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sin_imagen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detailTypePet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de prueba"/>
        <TextView
            android:id="@+id/detailLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de prueba"/>
        <TextView
            android:id="@+id/detailEmailContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de prueba"/>
        <TextView
            android:id="@+id/detailPhoneContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de prueba"/>
        <TextView
            android:id="@+id/detailObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de prueba"/>
    </LinearLayout>

</LinearLayout>