<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        app:cardElevation="2dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFound"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:src="@drawable/sin_imagen" />

            <LinearLayout
                android:id="@+id/layout_descrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/typeFound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/primary_text"
                    android:text="@string/pet_type"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location" />

                <TextView
                    android:id="@+id/emailContactFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_contact" />

                <TextView
                    android:id="@+id/phoneContactFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone" />
            </LinearLayout>
            <ImageView
                android:id="@+id/markMapFound"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mark"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>