<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Authentication.LoginActivity">

    <!--
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"/>
        -->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_init_session"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.FinderPet.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColorHint="#8BD0F0">
            <EditText
                android:id="@+id/fieldEmail"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.FinderPet.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#8BD0F0">
            <EditText
                android:id="@+id/fieldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:drawableLeft="@drawable/candado"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorAccent"
                android:padding="10dp"
                android:imeActionId="6"
                android:imeActionLabel="@string/action_sign_in_short"
                android:layout_weight="1"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/emailSignInButton"
            style="@style/Widget.FinderPet.Button"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:text="@string/login"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recover_password"
                android:textColor="@color/primary_text"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/or_login_with"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/googleSingInButton"
                style="@style/Widget.LoginGoogle.Button"
                app:icon="@mipmap/ic_logo_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_google"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebookSignInButton"
                style="@style/Widget.LoginFacebbok.Button"
                app:icon="@mipmap/ic_logo_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/com_smart_login_code"
                android:text="@string/login_facebook"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:paddingBottom="8dp"
            android:text="@string/no_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text" />

        <Button
            android:id="@+id/btn_register_email"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_user"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:layout_gravity="bottom|center"
            android:paddingBottom="16dp"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>




</FrameLayout>